<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sourcey.intelligentmedicalsystem">
    android:windowSoftInputMode="stateVisible|adjustResize"
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:name="com.sourcey.intelligentmedicalsystem.utils.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">

        <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="25" />



        <!-- android:name=".MainActivity" -->
        <activity
            android:name="com.sourcey.intelligentmedicalsystem.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sourcey.intelligentmedicalsystem.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.sourcey.intelligentmedicalsystem.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.sourcey.intelligentmedicalsystem.DiseaseListActivity"
            android:label="@string/title_activity_disease_list"
            android:theme="@style/AppTheme31"/>
        <activity android:name="com.sourcey.intelligentmedicalsystem.RecordActivity"
            android:theme="@style/AppTheme.Dark.withActionbar"
            android:label="@string/title_coi"/>
        <activity
            android:name="com.sourcey.intelligentmedicalsystem.AIActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppThemeAI">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.sourcey.intelligentmedicalsystem.DiseaseDetailActivity"
            android:label="@string/title_record"
            android:theme="@style/AppTheme31"/>
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.sourcey.intelligentmedicalsystem.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
    </application>

</manifest>