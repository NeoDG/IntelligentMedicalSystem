<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sourcey.intelligentmedicalsystem">
    android:windowSoftInputMode="stateVisible|adjustResize"

    <application
        android:name="com.sourcey.intelligentmedicalsystem.utils.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">

        <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="20" />

        <uses-permission android:name="android.permission.INTERNET"/>
        <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        <uses-permission android:name="android.permission.CAMERA"/>
        <uses-permission android:name="android.permission.RECORD_AUDIO"/>
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

        <!-- android:name=".MainActivity" -->
        <activity
            android:name="com.sourcey.intelligentmedicalsystem.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sourcey.intelligentmedicalsystem.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.sourcey.intelligentmedicalsystem.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name="com.sourcey.intelligentmedicalsystem.DiseaseListActivity"
            android:label="@string/title_activity_disease_list"
            android:theme="@style/AppTheme.Dark"/>
        <activity android:name="com.sourcey.intelligentmedicalsystem.RecordActivity"
            android:theme="@style/AppTheme3"
            android:label="@string/title_coi"/>
        <activity
            android:name="com.sourcey.intelligentmedicalsystem.AIActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppThemeAI">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.sourcey.intelligentmedicalsystem.DiseaseDetailActivity"
            android:label="@string/title_record"
            android:theme="@style/AppTheme31"/>
    </application>

</manifest>